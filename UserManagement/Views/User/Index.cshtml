@model List<UserManagement.Models.User>
@{
    ViewData["Title"] = "Users";
}

<h2>User Management</h2>
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Add New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>